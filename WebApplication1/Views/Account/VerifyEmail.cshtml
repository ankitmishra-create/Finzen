@model FinanceManagement.Application.DTO.VerificationResultDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Verification</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        /* Your CSS styles remain here */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
        }

        .verification-card {
            max-width: 550px;
            width: 100%;
            background-color: white;
            border-radius: 1rem;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
            padding: 2.5rem;
        }

        .icon-container {
            font-size: 4.5rem;
            margin-bottom: 1.5rem;
        }

        .card-title {
            font-weight: 700;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            border-radius: 0.5rem;
        }
    </style>
</head>
<body>

    <div class="verification-card">
        @if (Model.Success)
        {
            <div class="icon-container text-success">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <h2 class="card-title mb-3">Verification Complete</h2>
            <p class="card-text text-muted lead mb-4">@Model.Message</p>
            <div class="d-grid gap-2 col-10 mx-auto">
                <a asp-controller="Login" asp-action="Index" class="btn btn-success btn-lg">Proceed to Login</a>
            </div>
        }
        else
        {
            <div class="icon-container text-danger">
                <i class="bi bi-x-octagon-fill"></i>
            </div>
            <h2 class="card-title mb-3">Verification Failed</h2>
            <p class="card-text text-muted lead mb-4">@Model.Message</p>

            <div class="d-grid gap-2 col-10 mx-auto mt-4">
                @if (Model.Message.Contains("expired") || Model.Message.Contains("Invalid token"))
                {
                    <a asp-controller="Account" asp-action="ResendEmailConfirmation" class="btn btn-warning btn-lg">Resend Verification Email</a>
                }
                else if (Model.Message.Contains("User not found"))
                {
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Register a New Account</a>
                }

                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to Homepage</a>
            </div>
        }
    </div>

</body>
</html>