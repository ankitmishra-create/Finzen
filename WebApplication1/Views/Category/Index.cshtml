@using FinanceManagement.Core.Entities
@using FinanceManagement.Core.Enums
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Manage Categories";

    // --- OPTIMIZATION ---
    // Separate categories into two lists first to avoid looping through the full list twice.
    var incomeCategories = Model.Where(c => c.CategoryType == CategoryType.Income).ToList();
    var expenseCategories = Model.Where(c => c.CategoryType == CategoryType.Expense).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Manage Categories</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Create New Category
    </a>
</div>

<div class="row g-4">

    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Income</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (incomeCategories.Any())
                        {
                            foreach (var item in incomeCategories)
                            {
                                <tr>
                                    <td>@item.CategoryName</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">No income categories found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Expense</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (expenseCategories.Any())
                        {
                            foreach (var item in expenseCategories)
                            {
                                <tr>
                                    <td>@item.CategoryName</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">No expense categories found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>