@using FinanceManagement.Core.Entities
@model IEnumerable<Transaction>


    <a asp-controller="Category" asp-action="Index">Manage Categories</a>


<hr />

<a asp-controller="Transaction" asp-action="Index" >Manage Transactions</a>
<hr />

<div class="row">
 
    <div class="col-md-4 mb-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Income</h5>
                <h3 class="text-success">@ViewBag.Income</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Expense</h5>
                <h3 class="text-danger">@ViewBag.Expense</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Available</h5>
                <h3 class="text-primary">@ViewBag.Available</h3>
            </div>
        </div>
    </div>
</div>



<h1>Last 5 Transaction</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>TransactionDate</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Category.CategoryType</td>
                <td>@item.Amount</td>
                <td>@item.Description</td>
                <td>@item.TransactionDate.ToShortDateString()</td>
                <td>@item.Description</td>
                <td>@item.Category.CategoryName</td>
             </tr>
            }
    </tbody>
</table>
