@model FinanceManagement.Application.ViewModels.RecurringTransactionVM
@using FinanceManagement.Core.Enums
@{
    ViewData["Title"] = "Edit Recurring Transaction";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm rounded-3 border-0">
                <div class="card-body p-4 p-md-5">
                    <h3 class="card-title text-center mb-4 fw-bold">Edit Recurring Transaction</h3>

                    <form asp-controller="RecurringTransaction" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="RecurringTransactionId" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="TransactionTerrority"
                                            asp-items="Html.GetEnumSelectList<TransactionTerrority>()"
                                            class="form-select" disabled></select>
                                    <label asp-for="TransactionTerrority"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="OriginalCurrency" class="form-select" asp-items="ViewBag.Available" disabled class="form-select" asp-items="ViewBag.Available">
                                        <option value="">-- Select Currency --</option>
                                    </select>
                                    <label asp-for="OriginalCurrency"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="OriginalAmount" class="form-control" />
                                    <label asp-for="OriginalAmount"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="RecurrenceFrequency" class="form-select" asp-items="Html.GetEnumSelectList<Frequency>()"></select>
                                    <label asp-for="RecurrenceFrequency"></label>
                                </div>
                            </div>
                        </div>

                        @if (Model.IsStepUpTransaction)
                        {
                            <div class="mb-3">
                                <div class="form-check form-switch">

                                    <input name="IsStepUpTransaction" value="true"
                                           class="form-check-input" type="checkbox" id="stepUpToggle"
                                           @(Model.IsStepUpTransaction ? "checked" : "") />

                                    <input type="hidden" name="IsStepUpTransaction" value="false" />

                                    <label class="form-check-label fw-semibold" for="stepUpToggle">Enable Auto Increase</label>
                                </div>
                            </div>

                            <div class="row" id="stepUpInputsContainer" style="display:none;">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        @if (Model.StepUpAmount != null)
                                        {
                                            <input asp-for="StepUpAmount" class="form-control" />
                                            <label asp-for="StepUpAmount"></label>
                                        }
                                        else
                                        {
                                            <input asp-for="StepUpPercentage" class="form-control" />
                                            <label asp-for="StepUpPercentage"></label>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <select asp-for="StepUpFrequeny" class="form-select" asp-items="Html.GetEnumSelectList<Frequency>()"></select>
                                        <label asp-for="StepUpFrequeny"></label>
                                    </div>
                                </div>
                            </div>

                        }

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" style="height:100px"></textarea>
                            <label asp-for="Description"></label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // 1. Get the two elements
            const stepUpToggle = document.getElementById('stepUpToggle');
            const stepUpInputsContainer = document.getElementById('stepUpInputsContainer');

            // 2. Create a function to show/hide the inputs
            function toggleStepUpInputs() {
                if (stepUpToggle.checked) {
                    // Use 'flex' because "row" is a flex container
                    stepUpInputsContainer.style.display = 'flex';
                } else {
                    stepUpInputsContainer.style.display = 'none';
                }
            }

            // 3. Attach the function to the toggle's 'change' event
            stepUpToggle.addEventListener('change', toggleStepUpInputs);

            // 4. Run the function once on page load to set the correct initial state
            toggleStepUpInputs();

        });
    </script>
}