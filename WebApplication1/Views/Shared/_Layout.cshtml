<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinZen</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

    <style>
        /* Base font and smoothing */
        body {
            font-family: 'Inter', sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Custom animation for main content */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fadeInUp {
            animation: fadeInUp 0.5s ease-out forwards;
        }

        /* Custom scrollbar (optional, but adds to the 'sleek' look) */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-thumb {
            background: #d1c4e9; /* Light violet */
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #9575cd; /* Darker violet */
        }
        ::-webkit-scrollbar-track {
            background: #f3e5f5; /* Very light violet */
        }
    </style>
</head>
<body class="bg-gray-100 text-slate-800">

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="flex h-screen bg-gray-100">

            <aside class="hidden lg:flex w-64 bg-violet-50 text-gray-800 p-6 flex-col fixed h-full shadow-lg">
                <a class="text-3xl font-bold text-violet-800 mb-10" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bar-chart-fill"></i> FinZen
                </a>

                <nav class="flex-grow">
                    <ul class="space-y-2">
                        <li>
                            <a class="flex items-center gap-3 px-4 py-3 rounded-lg bg-violet-600 text-white font-medium" 
                               asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-grid-1x2-fill text-lg"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-600 hover:bg-violet-100 hover:text-violet-700 font-medium transition-all duration-200" 
                               asp-controller="Budget" asp-action="Index">
                                <i class="bi bi-calculator-fill text-lg"></i>
                                <span>Budget</span>
                            </a>
                        </li>
                        </ul>
                </nav>

                <div>
                    <div class="mb-3 p-3 bg-violet-100 rounded-lg">
                        <span class="text-sm font-medium text-violet-800">
                            Hello, @User.Identity.Name
                        </span>
                    </div>
                    <a class="flex items-center justify-center gap-3 w-full bg-red-600 text-white px-4 py-3 rounded-lg text-sm font-semibold shadow-md transition-all duration-300 hover:bg-red-700" 
                       asp-controller="Logout" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </aside>

            <div class="flex-1 flex flex-col overflow-y-auto lg:ml-64">

                <header class="bg-white shadow-sm p-6 sticky top-0 z-10 hidden lg:flex justify-between items-center">
                    <h1 class="text-2xl font-semibold text-gray-900">
                        @ViewData["Title"]
                    </h1>
                    </header>

                <main role="main" class="flex-grow p-4 md:p-6 animate-fadeInUp">
                    @RenderBody()
                </main>

                <footer class="bg-gray-900 text-gray-400">
                    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                            <div>
                                <a class="text-2xl font-bold text-white" asp-controller="Home" asp-action="Index">FinZen</a>
                                <p class="mt-2 text-sm">
                                    Take control of your finances. Achieve your zen.
                                </p>
                                <div class="flex space-x-4 mt-4">
                                    <a href="#" class="hover:text-white transition-colors"><i class="bi bi-twitter"></i></a>
                                    <a href="#" class="hover:text-white transition-colors"><i class="bi bi-facebook"></i></a>
                                    <a href="#" class="hover:text-white transition-colors"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                            </div>
                        <div class="border-t border-gray-700 mt-8 pt-6 text-center">
                            <p class="text-sm">
                                &copy; @DateTime.Now.Year - FinZen. All rights reserved.
                            </p>
                        </div>
                    </div>
                </footer>
            </div>

            <nav class="lg:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg flex justify-around p-2 z-50">
                <a class="flex flex-col items-center p-2 text-violet-600" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-grid-1x2-fill text-xl"></i>
                    <span class="text-xs">Dashboard</span>
                </a>
                <a class="flex flex-col items-center p-2 text-gray-500 hover:text-violet-600" asp-controller="Budget" asp-action="Index">
                    <i class="bi bi-calculator-fill text-xl"></i>
                    <span class="text-xs">Budget</span>
                </a>
                <a class="flex flex-col items-center p-2 text-gray-500 hover:text-red-600" asp-controller="Logout" asp-action="Logout">
                    <i class="bi bi-box-arrow-right text-xl"></i>
                    <span class="text-xs">Logout</span>
                </a>
            </nav>
        </div>
    }
    else
    {
        <div class="flex flex-col min-h-screen">
            <header class="bg-white shadow-md sticky top-0 z-50 w-full">
                <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex justify-between items-center h-16">
                        <div class="flex-shrink-0">
                            <a class="text-2xl font-bold text-violet-600" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-bar-chart-fill"></i> FinZen
                            </a>
                        </div>
                        <div class="flex items-center space-x-4">
                            <a class="bg-transparent text-violet-600 border border-violet-600 px-4 py-2 rounded-lg text-sm font-semibold transition-all duration-300 hover:bg-violet-50" asp-controller="Register" asp-action="Index">Register</a>
                            <a class="bg-violet-600 text-white px-4 py-2 rounded-lg text-sm font-semibold shadow-md transition-all duration-300 hover:bg-violet-700" asp-controller="Login" asp-action="Index">Login</a>
                        </div>
                    </div>
                </nav>
            </header>

            <main role="main" class="flex-grow animate-fadeInUp">
                @RenderBody()
            </main>

            <footer class="bg-gray-900 text-gray-400">
                <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                        <div>
                            <a class="text-2xl font-bold text-white" asp-controller="Home" asp-action="Index">FinZen</a>
                            <p class="mt-2 text-sm">
                                Take control of your finances. Achieve your zen.
                            </p>
                            <div class="flex space-x-4 mt-4">
                                <a href="#" class="hover:text-white transition-colors"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="hover:text-white transition-colors"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="hover:text-white transition-colors"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                        <div class="border-t border-gray-700 mt-8 pt-6 text-center">
                            <p class="text-sm">
                                &copy; @DateTime.Now.Year - FinZen. All rights reserved.
                        </div>
                </div>
            </footer>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>