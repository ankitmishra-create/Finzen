@using FinanceManagement.Core.Entities;
@model IEnumerable<Transaction>

<h1>Display Transactions</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
            <th>Transaction Date</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Category Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Amount</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Description</td>
                <td>@item.TransactionDate.ToString("yyyy-MM-dd")</td>
                <td><a asp-action="Edit" asp-route-transactionId="@item.TransactionId" >Edit</a></td>
                <td><a asp-action="Delete" asp-route-transactionId="@item.TransactionId">Delete</a> </td>
                <td>@item.Category.CategoryType</td>
            </tr>
        }
    </tbody>
</table>
