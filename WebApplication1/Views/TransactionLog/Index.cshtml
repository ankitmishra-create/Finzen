@using FinanceManagement.Core.Entities
@using FinanceManagement.Core.Enums
@model List<TransactionLog>?

@{
    ViewData["Title"] = "Deleted Transaction";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <p class="lead">List of all transactions that have been deleted.</p>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Logs Found</h4>
            <p>There are currently no deleted transactions in the log.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date Deleted</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Description</th>
                                <th>Original Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.ActionDate.ToLocalTime().ToString("g")</td>

                                    <td>@log.Amount?.ToString("N2")</td>

                                    <td>@log.OriginalCurrency</td>

                                    <td>@(log.Description ?? "N/A")</td>

                                    <td>@(log.TransactionDate?.ToLocalTime().ToString("d") ?? "N/A")</td>
                                    <td>
                                        <a asp-action="Recover" asp-route-transactionLogId="@log.TransactionLogId">Recover</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>