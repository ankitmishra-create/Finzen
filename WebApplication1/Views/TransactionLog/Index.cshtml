@using FinanceManagement.Core.Entities
@using FinanceManagement.Core.Enums
@model List<TransactionLog>?

@{
    ViewData["Title"] = "Deleted Transactions";
}

<div class="flex flex-col sm:flex-row justify-between sm:items-center gap-4 mb-6">
    <div>
        <h1 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h1>
        <p class="text-lg text-gray-500">List of all transactions that have been deleted.</p>
    </div>
    <div>
        <a asp-controller="Transaction" asp-action="Index" class="text-base font-medium text-violet-600 hover:text-violet-500">
            <i class="bi bi-arrow-left"></i>
            Back to Transactions
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="bg-blue-50 border border-blue-300 text-blue-800 rounded-xl p-8 text-center">
        <h3 class="text-2xl font-semibold mb-2">
            <i class="bi bi-info-circle-fill mr-2"></i>
            No Logs Found
        </h3>
        <p class="text-base">There are currently no deleted transactions in the log.</p>
    </div>
}
else
{
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="w-full overflow-x-auto">
            <table class="table-auto w-full text-left">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Date Deleted</th>
                        <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Currency</th>
                        <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Original Date</th>
                        <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-200">
                    @foreach (var log in Model.OrderByDescending(l => l.ActionDate))
                    {
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                @log.ActionDate.ToLocalTime().ToString("g")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">
                                @log.Amount?.ToString("N2")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                @log.OriginalCurrency
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                @(log.Description ?? "N/A")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                @(log.TransactionDate?.ToLocalTime().ToString("d") ?? "N/A")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right">
                                <a asp-action="Recover" asp-route-transactionLogId="@log.TransactionLogId" class="inline-flex items-center gap-1.5 px-3 py-1 text-sm font-medium text-green-600 border border-green-600 rounded-lg hover:bg-green-50 transition-all">
                                    <i class="bi bi-arrow-counterclockwise"></i>
                                    <span>Recover</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}